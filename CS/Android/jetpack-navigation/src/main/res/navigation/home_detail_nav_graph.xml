<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_detail_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="moe.maonaing.jetpack.DetailFragment"
        android:label="详情页测试">
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_from_left"
            app:exitAnim="@anim/slide_to_right" />
        <argument
            android:name="name"
            app:argType="string"
            android:defaultValue="默认数据" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="moe.maonaing.jetpack.HomeFragment"
        android:label="Jetpack"
        tools:layout="@layout/fragment_detail">

        <!-- 可以使用 R.id.xx 的形式获取这个 id -->
        <action
            android:id="@+id/action_homeFragment_to_detailFragment2"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_from_left"
            app:exitAnim="@anim/slide_to_right" />
    </fragment>

</navigation>